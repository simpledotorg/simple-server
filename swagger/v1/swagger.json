      "post": {
        "summary": "Syncs blood pressure data from device to server.",
        "tags": [
          "Blood Pressure"
        ],
        "security": [
          {
            "basic": [

            ]
          }
        ],
        "parameters": [
          {
            "name": "HTTP_X_USER_ID",
            "in": "header",
            "type": "uuid"
