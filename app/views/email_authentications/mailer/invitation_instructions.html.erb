<h1 style="letter-spacing:-0.7px;color:#333;font-family:Arial,sans-serif;font-weight:700;margin:0;font-size:150%;">Simple Dashboard</h1>

<div>&nbsp;</div>

<div style="font-size:110%;">
    <%= t("devise.mailer.invitation_instructions.someone_invited_you") %>
</div>

<div>&nbsp;</div>

<div style="font-size:110%;">
    <%= t("devise.mailer.invitation_instructions.click_button") %>
</div>

<div>&nbsp;</div>

<div>
    <!--BUTTON SPECIFIC TO MS OUTLOOK-->
        <!--[if mso]>
        <v:roundrect xmlns:v="urn:schemas-microsoft-com:vml" xmlns:w="urn:schemas-microsoft-com:office:word" href="<%= accept_invitation_url(@resource, :invitation_token => @token) %>" style="height:42px;v-text-anchor:middle;width:200px;" arcsize="12%" strokecolor="#c20020" fillcolor="#FF3355">
            <w:anchorlock/>
            <center style="color:#ffffff;font-family:sans-serif;font-size:15px;font-weight:bold;"><%= t("devise.mailer.invitation_instructions.accept") %></center>
          </v:roundrect>
        <![endif]-->

    <!--NORMAL BUTTON-->
        <a href="<%= accept_invitation_url(@resource, :invitation_token => @token) %>" style="background-color:#FF3355;border:1px solid #c20020;border-radius:5px;color:#ffffff;display:inline-block;font-family:sans-serif;font-size:16px;font-weight:bold;line-height:42px;text-align:center;text-decoration:none;width:200px;-webkit-text-size-adjust:none;mso-hide:all;">
        <%= t("devise.mailer.invitation_instructions.accept") %>
        </a>
</div>

<div>&nbsp;</div>
<div>&nbsp;</div>

<% if @resource.invitation_due_at %>
  <div style="font-size:110%;"><%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %></div>

  <div>&nbsp;</div>
<% end %>


<div style="font-size:85%;">
    <%= t("devise.mailer.invitation_instructions.ignore") %>
</div>

<div>&nbsp;</div>
<div>&nbsp;</div>

<!--HR-->
<div style="height:2px;background:#F0F2F5;margin:0;"></div>

<div>&nbsp;</div>
<div>&nbsp;</div>

<div style="font-size: 110%;">
  <%= t("devise.mailer.invitation_instructions.link") %>
  <a href="<%= root_url %>" style="text-decoration: none; color: #0075EB;"><%= root_url %></a>
</div>

<div>&nbsp;</div>

<div style="font-size: 110%;">
  <%= t("devise.mailer.invitation_instructions.username") %>
  <a href="mailto:<%= @resource.email %>" style="text-decoration: none; color: #0075EB;"><%= @resource.email %></a>
</div>
