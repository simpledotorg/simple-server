<ul class="access-item-wrapper facility">
  <% tree.each do |facility| %>
    <li>
      <div class="access-item facility collapsed" data-facility-group-id="<%=facility[:facility_group_id]%>">
        <% tree_depth.times do %>
          <span class="spacer"></span>
        <% end %>

        <div class="access-item__dropdown hidden">
          <i class="fas fa-caret-down c-grey-dark"></i>
        </div>

        <div class="form-check <%= "show" if page.eql?(:show) %>">

          <% unless page.eql?(:show) %>
            <% pre_checked = page.eql?(:edit) && user_being_edited.visible_facilities.include?(facility) %>
            <%= access_checkbox(:facilities, facility, checked: pre_checked) %>
          <% end %>

          <%= access_resource_label(facility) %>
        </div>

        <div class="access-item__padding"></div>
      </div>
    </li>
  <% end %>
</ul>
