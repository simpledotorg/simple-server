<p id="notice"><%= notice %></p>

<h1>Facilities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Street address</th>
      <th>Village or colony</th>
      <th>District</th>
      <th>State</th>
      <th>Country</th>
      <th>Pin</th>
      <th>Facility type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility.name %></td>
        <td><%= facility.street_address %></td>
        <td><%= facility.village_or_colony %></td>
        <td><%= facility.district %></td>
        <td><%= facility.state %></td>
        <td><%= facility.country %></td>
        <td><%= facility.pin %></td>
        <td><%= facility.facility_type %></td>
        <td><%= link_to 'Show', facility %></td>
        <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
        <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

