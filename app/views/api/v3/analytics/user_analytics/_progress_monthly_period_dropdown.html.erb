<select
  id="<%= element_id %>"
  class="w-100 mb-24px p-12px fw-medium fs-14px ls-1_25px tt-uppercase c-blue bgc-blue-light b-none br-1px bs-secondary-button o-none a-none chevron-down-icon"
  onchange="updateMonthlyReport('<%= element_id %>');"
>
  <% if @is_diabetes_enabled %>
    <option value="monthly_<%= element_id %>_htn_or_dm">
      <%= t("progress_tab.diagnoses.all") %>
    </option>
  <% end %>
  <option value="monthly_<%= element_id %>_htn_only">
    <%= t("progress_tab.diagnoses.hypertension_only") %>
  </option>
  <% Patient::GENDERS.each do |gender| %>
    <option value="monthly_<%= element_id %>_htn_only_<%= gender %>">
      <%= t("progress_tab.diagnoses.hypertension") %>: <%= gender %>
    </option>
  <% end %>
  <% if @is_diabetes_enabled %>
    <option value="monthly_<%= element_id %>_dm_only">
      <%= t("progress_tab.diagnoses.diabetes_only") %>
    </option>
    <% Patient::GENDERS.each do |gender| %>
      <option value="monthly_<%= element_id %>_dm_only_<%= gender %>">
        <%= t("progress_tab.diagnoses.diabetes") %>: <%= gender %>
      </option>
    <% end %>

    <option value="monthly_<%= element_id %>_htn_and_dm">
      <%= t("progress_tab.diagnoses.hypertension_and_diabetes") %>
    </option>
    <% Patient::GENDERS.each do |gender| %>
      <option value="monthly_<%= element_id %>_htn_and_dm_<%= gender %>">
        <%= t("progress_tab.diagnoses.hypertension_and_diabetes") %>: <%= gender %>
      </option>
    <% end %>
  <% end %>
</select>