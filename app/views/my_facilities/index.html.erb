<% if CountryConfig.current[:name] == "India" && SimpleServer.env.production? %>
  <div class="alert alert-danger mb-48px" role="alert">
    <h3 class="c-red-dark mt-8px">Maintenance: May 21-22</h3>
    <p class="c-red-dark">The Simple Dashboard will be down for maintenance from the afternoon on Sat May 28 to the evening of Sun May 29.</p>
    <ul class="c-red-dark">
      <li>Healthcare workers can still record patients, but sync to the Simple Dashboard will be down.</li>
      <li>The Simple Dashboard will be inaccessible.</li>
    </ul>
  </div>
<% end %>

<% content_for :title do %>
 Home
<% end %>

<h1 class="page-header">
  Home
</h1>
<div class="d-flex row">
  <div class="col-lg-6">
    <%= render "shared/user_approvals" %>
    <%= render "recent_updates" %>
    
    <% if CountryConfig.current[:name] == "India" %>
      <%= render "shared/office_hours_india" %>
    <% elsif CountryConfig.current[:name] == "Bangladesh" %>
      <%= render "shared/office_hours_bangladesh" %>
    <% elsif CountryConfig.current[:name] == "Ethiopia" %>
      <%= render "shared/office_hours_ethiopia" %>
    <% end %>
    
    <%= render "upcoming_improvements" %>
  </div>
  <div class="col-lg-6">
    <%= render 'shared/my_facilities/facilities_by_size' %>
    <%= render 'shared/my_facilities/inactive_facilities' %>
  </div>
</div>
