<div>
  <% return nil if report.nil? || report[:total] == "error" %>
  <% drugs = report[:drugs].reject {|drug| drug.nil? || drug[:consumed] == "error"} %>
  <% drugs.each_with_index do |drug, i| %>
    <span class='math'>
      <%= '+' unless i == 0 %>
      <%= drug[:consumed] %>
      <% unless drug[:coefficient] == 1 %>
        *<%= drug[:coefficient] %>
      <% end %>
    </span>
    <%= drug[:name] %>
    <br>
  <% end %>
  <span class='math'>=<%= report[:total] %></span> Base doses
</div>
