<% grouped = @district_reports.group_by { |district, _| district.state }.sort_by { |state, _| state } %>

<div class="district-drug-consumption-table mb-5">
  <div class="table-responsive">
    <table class="mt-4 table table-compact table-hover analytics-table">
      <colgroup>
        <col>
        <col>
        <% first_drugs_by_category = @district_reports&.values&.first&.dig(:drugs_by_category) %>
        <% if first_drugs_by_category.present? %>
          <% first_drugs_by_category.each do |drug_category, drugs| %>
            <% drugs.each_with_index do |_drug, index| %>
              <col class="<%= "table-divider" if index.zero? %>">
            <% end %>
            <% unless drug_category == "diabetes" %>
              <col> <%# Patient Days column %>
            <% end %>
          <% end %>
        <% end %>
      </colgroup>

      <thead>
        <%# --- Category Headers --- %>
        <tr>
          <th></th>
          <th></th>
          <% if first_drugs_by_category.present? %>
            <% first_drugs_by_category.each do |drug_category, drugs| %>
              <th colspan="<%= drugs.count + (drug_category == "diabetes" ? 0 : 1) %>"><%= protocol_drug_labels[drug_category]&.dig(:full) %></th>
            <% end %>
          <% end %>
        </tr>

        <%# --- Column Headers --- %>
        <tr data-sort-method="thead" class="sorts">
          <th class="row-label sort-label sticky" data-sort-default>Districts</th>
          <th class="row-label sort-label sticky" data-sort-method="number">Patients <br/> under <br/> care</th>

          <% if first_drugs_by_category.present? %>
            <% first_drugs_by_category.each do |drug_category, drugs| %>
              <% drugs.each do |drug| %>
                <th class="row-label sort-label row-medicine sticky"
                    data-sort-method="number"
                    data-sort-column-key="<%= drug.id %>">
                  <%= drug.name %><br>
                  <%= drug.dosage %>
                </th>
              <% end %>
              <% unless drug_category == "diabetes" %>
                <th class="row-label sort-label sticky"
                    data-sort-method="number"
                    data-sort-column-key="<%= "#{drug_category}_patient_days" %>">
                  Patient Days
                </th>
              <% end %>
            <% end %>
          <% end %>
        </tr>

        <%# --- All States Total Row --- %>
        <% all_totals = Hash.new(0) %>
        <% all_patient_count = 0 %>
        <% @district_reports&.each do |_, data| %>
          <% report = data[:report] %>
          <% all_patient_count += (params[:zone].present? || params[:size].present?) ? report[:facilities_total_patient_count].to_i : report[:district_patient_count].to_i %>

          <% if first_drugs_by_category.present? %>
            <% first_drugs_by_category.each do |drug_category, drugs| %>
              <% drugs.each do |drug| %>
                 <% consumption = if params[:zone].present? || params[:size].present?
                    report[:drug_consumption_by_facility_id]&.values&.sum { |f| f&.values&.sum { |v| v.is_a?(Numeric) ? v : 0 } } || 0
                  else
                    val = report[:drug_consumption]&.dig(drug.rxnorm_code)
                    val.is_a?(Numeric) ? val : 0
                  end %>
                <% all_totals[drug.rxnorm_code] += consumption.to_i if consumption.present? && consumption != "error" %>
              <% end %>
              <% unless drug_category == "diabetes" %>
                <% patient_days = report[:patient_days]&.dig(drug_category) || 0 %>
                <% all_totals["#{drug_category}_patient_days"] = (all_totals["#{drug_category}_patient_days"] || 0) + patient_days.to_i %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>

        <tr class="row-total font-weight-bold warning" data-sort-method="none">
          <td class="type-title"
              data-html="true"
              data-toggle="tooltip"
              data-placement="top"
              data-trigger="hover focus click"
              data-original-title='<%= "All States: #{all_totals.values.sum} units, #{all_patient_count} patients" %>'>
            All
          </td>
          <td class="type-number text-center" data-sort-value="<%= all_patient_count %>"><%= all_patient_count %></td>

          <% if first_drugs_by_category.present? %>
            <% first_drugs_by_category.each do |drug_category, drugs| %>
              <% drugs.each do |drug| %>
                <td class="type-number text-center" data-sort-value="<%= all_totals[drug.rxnorm_code] %>">
                  <%= all_totals[drug.rxnorm_code].positive? ? all_totals[drug.rxnorm_code] : "0" %>
                </td>
              <% end %>
              <% unless drug_category == "diabetes" %>
                <td class="type-number text-center" data-sort-value="<%= all_totals["#{drug_category}_patient_days"] %>">
                  <%= all_totals["#{drug_category}_patient_days"] %>
                </td>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      </thead>

      <%# --- State & District Rows --- %>
      <% grouped.each do |state, districts| %>
        <% state_totals = Hash.new(0) %>
        <% state_patient_count = 0 %>

        <% districts.each do |_, data| %>
          <% report = data[:report] %>
          <% state_patient_count += (params[:zone].present? || params[:size].present?) ? report[:facilities_total_patient_count].to_i : report[:district_patient_count].to_i %>

          <% if first_drugs_by_category.present? %>
            <% first_drugs_by_category.each do |drug_category, drugs| %>
              <% drugs.each do |drug| %>
                 <% consumption = if params[:zone].present? || params[:size].present?
                    report[:drug_consumption_by_facility_id]&.values&.sum { |f| f&.values&.sum { |v| v.is_a?(Numeric) ? v : 0 } } || 0
                  else
                    val = report[:drug_consumption]&.dig(drug.rxnorm_code)
                    val.is_a?(Numeric) ? val : 0
                  end %>
                <% state_totals[drug.rxnorm_code] += consumption.to_i if consumption.present? && consumption != "error" %>
              <% end %>
              <% unless drug_category == "diabetes" %>
                <% patient_days = report[:patient_days]&.dig(drug_category) || 0 %>
                <% state_totals["#{drug_category}_patient_days"] = (state_totals["#{drug_category}_patient_days"] || 0) + patient_days.to_i %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>

        <tbody class="state-group">
          <%# State subtotal row %>
          <tr class="row-total font-weight-bold warning" data-sort-method="none">
            <td class="type-title"
                data-html="true"
                data-toggle="tooltip"
                data-placement="top"
                data-trigger="hover focus click"
                data-original-title='<%= "#{state}: #{state_totals.values.sum} units, #{state_patient_count} patients" %>'>
              <%= state %><br><span> subtotal </span>
            </td>
            <td class="type-number text-center" data-sort-value="<%= state_patient_count %>"><%= state_patient_count %></td>

            <% if first_drugs_by_category.present? %>
              <% first_drugs_by_category.each do |drug_category, drugs| %>
                <% drugs.each do |drug| %>
                  <td class="type-number text-center" data-sort-value="<%= state_totals[drug.rxnorm_code] %>"><%= state_totals[drug.rxnorm_code] %></td>
                <% end %>
                <% unless drug_category == "diabetes" %>
                  <td class="type-number text-center" data-sort-value="<%= state_totals["#{drug_category}_patient_days"] %>">
                    <%= state_totals["#{drug_category}_patient_days"] %>
                  </td>
                <% end %>
              <% end %>
            <% end %>
          </tr>

          <%# District rows --- sortable %>
          <% districts.each do |district, data| %>
            <% report = data[:report] %>
            <tr class="type-number district-row">
              <td class="type-title"
                  data-html="true"
                  data-toggle="tooltip"
                  data-placement="top"
                  data-trigger="hover focus click"
                  data-original-title='<%= "#{district.name}: #{(params[:zone].present? || params[:size].present?) ? report[:facilities_total_patient_count] : report[:district_patient_count]} patients" %>'>
                <a href="<%= my_facilities_drug_consumption_path(facility_group: district.slug, for_end_of_month: @for_end_of_month_display) %>" target="_blank">
                  <%= district.name %>
                </a>
              </td>
              <td class="type-number text-center" data-sort-value="<%= report[:district_patient_count].to_i %>">
                <%= (params[:zone].present? || params[:size].present?) ? report[:facilities_total_patient_count] : report[:district_patient_count] %>
              </td>

              <% if first_drugs_by_category.present? %>
                <% first_drugs_by_category.each do |drug_category, drugs| %>
                  <% drugs.each do |drug| %>
                     <% consumption = if params[:zone].present? || params[:size].present?
                        report[:drug_consumption_by_facility_id]&.values&.sum { |f| f&.values&.sum { |v| v.is_a?(Numeric) ? v : 0 } } || 0
                      else
                        val = report[:drug_consumption]&.dig(drug.rxnorm_code)
                        val.is_a?(Numeric) ? val : 0
                      end %>
                    <td class="type-number text-center" data-sort-value="<%= consumption %>"><%= consumption %></td>
                  <% end %>
                  <% unless drug_category == "diabetes" %>
                    <% patient_days = report[:patient_days]&.dig(drug_category) || 0 %>
                    <td class="type-number text-center" data-sort-value="<%= patient_days %>"><%= patient_days %></td>
                  <% end %>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>
  </div>
</div>

<%# --- Legend --- %>
<div class="d-flex align-center">
  <em class="h-16px w-16px mr-8px b-2px bg-red br-8px"></em>
  <p class="fs-12px lh-1 c-grey-dark mt-2 mb-2">&lt;30 patients days of stock</p>
</div>
<div class="d-flex align-center">
  <em class="h-16px w-16px mr-8px b-2px bg-orange br-8px"></em>
  <p class="fs-12px lh-1 c-grey-dark mt-2 mb-2">&lt;60 patients days of stock</p>
</div>
<div class="d-flex align-center">
  <em class="h-16px w-16px mr-8px b-2px bg-yellow br-8px"></em>
  <p class="fs-12px lh-1 c-grey-dark mt-2 mb-2">&lt;90 patients days of stock</p>
</div>
<div class="d-flex align-center">
  <em class="h-16px w-16px mr-8px bg-green br-8px"></em>
  <p class="fs-12px lh-1 c-grey-dark mt-2 mb-2">&gt;90 patients days of stock</p>
</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
  document.querySelectorAll("th[data-sort-column-key]").forEach(function(header) {
    header.addEventListener("click", function() {
      const columnIndex = Array.from(header.parentNode.children).indexOf(header);

      document.querySelectorAll("tbody.state-group").forEach(function(tbody) {
        const subtotalRow = tbody.querySelector(".row-total");
        const districtRows = Array.from(tbody.querySelectorAll(".district-row"));
        const currentOrder = tbody.dataset.sortOrder || "asc";

        const sortedRows = districtRows.sort(function(a, b) {
          const aValue = parseFloat(a.children[columnIndex]?.dataset.sortValue || 0);
          const bValue = parseFloat(b.children[columnIndex]?.dataset.sortValue || 0);
          return currentOrder === "asc" ? bValue - aValue : aValue - bValue;
        });

        tbody.dataset.sortOrder = currentOrder === "asc" ? "desc" : "asc";

        tbody.innerHTML = "";
        tbody.appendChild(subtotalRow);
        sortedRows.forEach(row => tbody.appendChild(row));
      });
    });
  });
});
</script>
