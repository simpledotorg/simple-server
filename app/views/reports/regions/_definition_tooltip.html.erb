<span class="p-relative t--2px">
  <i
    class="fas fa-question-circle fs-14px c-grey-dark"
    data-toggle="tooltip"
    data-placement="right"
    data-trigger="hover click"
    data-html="true"
    title="<% definitions.each do |name, description| %>
             <p class='mb-4px'><strong><%= name %>:</strong> <%= description %></p>
           <% end %>"
  >
  </i>
</span>
