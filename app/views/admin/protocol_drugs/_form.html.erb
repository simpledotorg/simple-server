<div class="col pl-0">
  <%= bootstrap_form_with(model: [:admin, @protocol, @protocol_drug], local: true, label_errors: true) do |form| %>

    <div class="row">
      <div class="col-md-4">
        <%= form.text_field :name, id: :medication_name %>
      </div>
      <div class="col-md-2">
        <%= form.text_field :dosage, id: :medication_dosage %>
      </div>
      <div class="col-md-2">
        <%= form.text_field :rxnorm_code, id: :medication_rxnorm_code, label: "RxNorm code", help: "Optional" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <%= form.select :drug_category,
                        ProtocolDrug.drug_categories.map { |key, label| [label, key] },
                        {include_blank: true, label: "Category"},
                        {required: false} %>
        <small class="form-text text-muted mb-3">
          Select "Other" if unsure
        </small>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <%= form.select :stock_tracked,
                        [["Yes", true], ["No", false]],
                        required: true %>
        <%= form.primary("Save medication") %>
      </div>
    </div>
  <% end %>
</div>
