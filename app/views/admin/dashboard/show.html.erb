<% if @users_requesting_approval.any? %>
  <h4><%= pluralize(@users_requesting_approval.count || 0, "user") %> waiting for access</h4>

  <% @users_requesting_approval.each do |user| %>
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-lg-3">
            <%= link_to user.full_name, [:admin, user] %>
            <br>
            <small><%= user.sync_approval_status_reason %></small>
          </div>
          <div class="col">
            <div class="row">
              <div class="col">
                <div class="card-cell-header">Phone:</div>
                <a href="tel:<%= user.phone_number %>"><%= user.phone_number %></a><br>
              </div>
              <div class="col">
                <div class="card-cell-header">Facility:</div>
                <%= user.registered_at_facility.present? ? link_to(user.registered_at_facility.name, [:admin, user.registered_at_facility]) : "N/A" %><br>
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <%= link_to "Allow access", admin_user_enable_access_path(user), method: :put, class: "btn btn-sm btn-success", data: { confirm: I18n.t('admin.enable_access_alert') } %>
            <%= link_to 'Deny access', '#deny-access-modal-' + user.id, 'data-toggle' => 'modal', class: "btn btn-sm btn-outline-danger" %>

            <%= render partial: "admin/users/deny_access_modal", locals: { user: user } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<hr>

<h3>Recent BPs recorded</h3>
<div class="table-responsive">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>Facility &amp; Users</th>
        <th class="text-center">All-time<br>total</th>
        <% 6.downto(2).each do |since| %>
          <th class="text-center">
            <small><%= time_ago_in_words(since.days.ago.in_zone("New Delhi")) %> ago</small><br><%= since.days.ago.strftime("%A") %>
          </th>
        <% end %>
        <th class="text-center">
          <small>Yesterday</small><br><%= 1.day.ago.in_zone("New Delhi").strftime("%A") %>
        </th>
        <th class="text-center">
          <small>Today</small><br><%= Time.zone.now.strftime("%A") %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @facilities.sort_by(&:name).each do |facility| %>
        <% next if @bps_by_facility.fetch(facility.id, 0)  == 0 %>

        <tr class="table-light">
          <td><strong><%= facility.name %></strong>
          <td class="text-center"><%= lighten_if_zero(@bps_by_facility[facility.id] || 0) %></td>
          <td colspan="7"></td>
        </tr>

        <% facility.users.sort_by(&:full_name).each do |user| %>
          <tr>
            <td class="pl-lg-4"><small><%= user.full_name %></small></td>
            <td class="text-center">
              <small><%= lighten_if_zero(@bps_by_facility_user[[facility.id, user.id]] || 0) %></small>
            </td>
            <% 6.downto(0).each do |since| %>
              <td class="text-center">
                <small><%= lighten_if_zero(@bps_by_facility_user_day[[facility.id, user.id, since.days.ago.in_zone("New Delhi").to_date]] || 0) %></small>
              </td>
            <% end %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<hr>

<h3>Control rates and patients registered</h3>
<div class="table-responsive">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>Facility</th>
        <th>Control rate</th>
        <th class="text-center">All-time<br>total</th>
        <% 3.downto(0).each do |since| %>
          <th class="text-center">
            <%= since.months.ago.in_zone("New Delhi").strftime("%b %Y") %>
          </th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @facilities.sort_by(&:name).each do |facility| %>
        <% next if @bps_by_facility.fetch(facility.id, 0)  == 0 %>

        <tr class="table-light">
          <td><%= facility.name %></td>
          <td class="text-center"><%= number_to_percentage((@control_rate_by_facility[facility.id] || 0) * 100, precision: 1) || 'N/A' %></td>
          <td class="text-center"><%= lighten_if_zero(@patients_by_facility[facility.id] || 0) %></td>
          <% 3.downto(0).each do |since| %>
            <td class="text-center">
              <%= lighten_if_zero(@patients_by_facility_month[[facility.id, since.months.ago.in_zone("New Delhi").beginning_of_month.to_date]] || 0) %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p class="text-muted"><small>Note: All times are in India Standard Time</small><p>
