<div class="page-header">
  <h1 class="page-title">Edit <%= t("facility_group") %></h1>
  <nav class="page-nav">
    <% if current_admin.accessible_facility_groups(:manage).find_by_id(@facility_group) && @facility_group.discardable? %>
      <%= link_to "Delete #{t("facility_group")}", [:admin, @facility_group], method: :delete, data: {confirm: "Are you sure you want to delete #{@facility_group.name}?"}, class: "btn btn-outline-danger ml-4" %>
    <% end %>
  </nav>
</div>

<%= render 'form', facility_group: @facility_group, organizations: @organizations, protocols: @protocols %>
