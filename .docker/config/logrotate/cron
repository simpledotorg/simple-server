  su root root
  size 500M
  daily
  rotate 3
  missingok
  notifempty
  compress
  delaycompress
  copytruncate
  dateext
  lastaction
    /usr/bin/s3cmd sync /home/deploy/apps/simple-server/shared/log/*.gz "s3://$LOG_ARCHIVE_S3_PATH_PREFIX/$HOSTNAME/rails/"
  endscript
}
